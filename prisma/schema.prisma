generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String
  name            String?
  department      String?
  year            Int?
  isAdmin         Boolean   @default(false)
  hostel          String?
  pors            String[]
  hasSubmitted    Boolean   @default(false)
  submittedAt     DateTime?
  reviewsReceived Review[]  @relation("ReceivedReviews")
  reviewsWritten  Review[]  @relation("WrittenReviews")
  
  @@index([department])
  @@index([hostel])
  @@index([hasSubmitted])
}

model Review {
  id                  String   @id @default(cuid())
  createdAt           DateTime @default(now())
  reviewerId          String
  revieweeId          String
  academicEthics      Int
  academicInclination Int
  approachability     Int
  ismpMentor          String?
  maturity            Int
  openMindedness      Int
  otherComments       String?
  substanceAbuse      String?
  workEthics          Int
  reviewee            User     @relation("ReceivedReviews", fields: [revieweeId], references: [id])
  reviewer            User     @relation("WrittenReviews", fields: [reviewerId], references: [id])

  @@unique([reviewerId, revieweeId])
}

model SystemSettings {
  id             String   @id @default(cuid())
  reviewsEnabled Boolean  @default(true)
  updatedAt      DateTime @updatedAt
}
